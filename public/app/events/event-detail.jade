.container
    h1{{event.title}}
    .row
        .col-md-6
            h3(ng-show="event.featured") Featured
            h3 Scheduled on {{event.published |date}}

        .col-md-4.col-md-offset-1
            .panel.panel-success
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in event.tags") {{tag}}
        .col-md-6
            p {{event.description}}