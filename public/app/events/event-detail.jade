.container
    h1{{event.title}}
    .row
        .col-md-6
            h3(ng-show="event.featured") Featured
            h3 Pubished on {{event.published |date}}

        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in event.tags") {{tag}}